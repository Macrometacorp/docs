            "description": "PhotonIQ EST customer ID."
          },
          {
            "in": "query",
            "name": "from",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "required": true,
            "description": "The UTC start date and time for which activity information is retrieved (e.g. 2022-01-01T00:00:00Z)."
          },
          {
            "in": "query",
            "name": "to",
            "schema": {
              "type": "string",
              "format": "date-time"
            },
            "description": "The UTC end date and time for which activity information is retrieved (e.g. 2022-01-01T00:00:00Z).",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Activity metrics retrieved successfully.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MetricsResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid date parameters."
